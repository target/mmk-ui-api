{{ define "layout" }}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{{.Title}}</title>
        <!-- Critical CSS inlined for fast initial render -->
        <style>{{criticalCSS}}</style>
        <!-- CSP-safe async CSS loading: preload hint + regular stylesheet -->
        <!-- Modern browsers reuse the preloaded response without double download -->
        <link rel="preload" href="{{ asset "css/styles.css" }}" as="style" />
        <link rel="stylesheet" href="{{ asset "css/styles.css" }}" />
        <!-- Core JS libraries (htmx + lucide, needed on every page) -->
        <script defer src="{{ asset "js/vendor.core.js" }}"></script>
        <!-- App initializer (CSP-friendly, no inline) -->
        <script defer src="{{ asset "js/app.js" }}"></script>
    </head>
    <body>
        <main id="main">
            {{ template "content" . }}
        </main>
        <!-- Toast notification container -->
        <div id="toast-container"
             class="toast-container"
             aria-live="polite"
             aria-atomic="true"></div>
    </body>
</html>
{{ end }}
