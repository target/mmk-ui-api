{{ define "secrets-content" }}
<div class="secrets-section">
    <div class="card">
        <div class="card-header">
            <a class="btn btn-primary"
               href="/secrets/new"
               hx-get="/secrets/new"
               hx-target="#main-content"
               hx-swap="innerHTML"
               hx-push-url="true">
                <i data-lucide="plus"></i>
                <span>New Secret</span>
            </a>
        </div>
        <div class="card-body">
            {{ template "error-banner" . }}
            {{ if not .Error }}
            <div class="mt-3" id="secrets-table">
                <div class="table-scroll-wrapper">
                <table class="table secrets-table w-full">
                    <thead>
                        <tr>
                            <th align="left">Name</th>
                            <th align="left">Created</th>
                            <th align="left">Updated</th>
                            <th align="right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{ range .Secrets }}
                        <tr class="row-link"
                            id="secret-row-{{.ID}}"
                            hx-get="/secrets/{{.ID}}/edit"
                            hx-target="#main-content"
                            hx-swap="innerHTML"
                            hx-push-url="true"
                            hx-trigger="row-nav"
                            role="link"
                            tabindex="0">
                            <td class="mono">{{.Name}}</td>
                            <td class="text-muted nowrap">{{ timeTag .CreatedAt }}</td>
                            <td class="text-muted nowrap">{{ timeTag .UpdatedAt }}</td>
                            <td align="right">
                                <div class="table-actions">
                                    <button class="btn-table-action btn-table-action--danger"
                                            type="button"
                                            hx-post="/secrets/{{.ID}}/delete"
                                            hx-confirm="Delete this secret? It may be in use by a Source or an Alert Sink."
                                            hx-target="#secret-row-{{.ID}}"
                                            hx-swap="outerHTML swap:500ms"
                                            hx-push-url="false"
                                            data-row-delete
                                            data-component="row-delete"
                                            title="Delete secret"
                                            aria-label="Delete secret"
                                            data-stop-row-nav>
                                        <i data-lucide="trash-2"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {{ else }}
                        <tr>
                            <td colspan="5">
                                <em>No secrets have been created yet.</em>
                            </td>
                        </tr>
                        {{ end }}
                    </tbody>
                </table>
                </div>
            </div>
            {{ template "pagination" . }}
            {{ end }}
        </div>
    </div>
</div>
{{ end }}
