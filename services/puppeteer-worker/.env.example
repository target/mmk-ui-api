# Example Environment Configuration
# Copy this file to .env and customize for your environment

# Required: Job queue API base URL
MERRYMAKER_API_BASE=http://localhost:8080

# Worker configuration
WORKER_JOB_TYPE=browser
WORKER_LEASE_SECONDS=30
WORKER_WAIT_SECONDS=25
WORKER_HEARTBEAT_SECONDS=10

# Puppeteer settings
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# File capture
FILE_CAPTURE_ENABLED=true
FILE_CAPTURE_TYPES=script,document,stylesheet
FILE_CAPTURE_MAX_SIZE=1048576
FILE_CAPTURE_STORAGE=memory
FILE_CAPTURE_CT_MATCHERS=application/javascript,application/json,application/xml

# Event shipping
SHIPPING_ENDPOINT=http://localhost:8080/api/events/bulk
SHIPPING_BATCH_SIZE=100
SHIPPING_MAX_BATCH_AGE=5000

# Client monitoring
CLIENT_MONITORING_ENABLED=true
CLIENT_MONITORING_EVENTS=storage,dynamicCode

# Optional: Custom Chrome path
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
